<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pc.demo_save.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"

        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/main_layout"

        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"

        >

        <TextView
            android:id="@+id/txtMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_weight="4"
            android:gravity="center"
            android:text="Balance "
            android:textSize="30dp"
            android:textColor="@color/White"/>

        <TextView
            android:id="@+id/txtMain_2"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/White"
            android:text="How much do you have in your wallet?"
            />

        <EditText
            android:id="@+id/edtMoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="25dp"
            android:textColor="@color/White"
            android:textSize="20dp"
            android:gravity="left"
            android:hint="  save money"
            android:drawableLeft="@drawable/mo1"


            />
        <Button
            android:id="@+id/btnContinue"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"

            android:text="Continue"
            android:background="@drawable/main_layout"
            android:textColor="@color/White"
            android:layout_marginBottom="120dp"
            />

    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
